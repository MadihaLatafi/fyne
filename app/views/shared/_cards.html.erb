<div class="card-container">
  <div class="event-info-box">
    <div id="event-hour-box">
      <%= event.start_time.strftime('%H:%M') %>
    </div>
    <div id="event-info-aest-bg-box">
      <div id="event-info-box-aesthetic-background">
      </div>
      <div id="event-subcategory-box">
        <%= event.subcategory %>
      </div>
    </div>
  </div>

      <% if event.photo? %>
        <% event_image = event.photo %>
      <% else %>
        <% event_image = "event-placeholder-photo-banner.jpg" %>
      <% end %>

      <!-- , class: "event-photo-cropped"  -->
  <div class="card-wrapper">
    <div class="card" style="background-image: url('<%= image_path event_image %>');" >

      <div class="card-description">
        <h2><%= event.name %></h2>
        <p>
          <i class="fa fa-map-marker" aria-hidden="true" ></i>
          <span><%= event.street_address %> <%= event.zip_code %> <%= event.city %>, <%= event.country %></span>
        </p>
      </div>
      <%= link_to '', event_path(event), class: "card-link" %>
    </div>

    <div class="card-footer">
      <p>
      <%= pluralize((event.swipe.where(interested: true).count), 'person') %> interested
      </p>
      <i class="fa fa-share btn-fyne-circle" aria-hidden="true"></i>
    </div>
  </div>
</div>
